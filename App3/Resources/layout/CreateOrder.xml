<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="155dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:background="#aa000000"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
        <RelativeLayout
            android:id="@+id/rlscan"
            android:layout_width="330dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="0.0dp">
            <ImageView
                android:id="@+id/ivScanning"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/scan_light" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/area_above_left" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/area_above_right" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/area_below_left" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/area_below_right" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#aa000000"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">
      <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#FF00"
            android:dividerHeight="5dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_weight="4">
        <Button
            android:text="取消"
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:onClick="Cancel"
            android:id="@+id/cancel" />
        <TextView
            android:text="订单数量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerHorizontal="true"
            android:id="@+id/orderNumber" />
        <Button
            android:text="提交订单"
            android:layout_width="140dp"
            android:layout_height="fill_parent"
            android:id="@+id/subOrder"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>