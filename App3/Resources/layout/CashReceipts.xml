<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#E5E5E5"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="57.0dp"
        android:layout_weight="4"
         android:layout_marginRight="7.0dp"
        android:layout_marginLeft="7.0dp"
        android:layout_marginBottom="1.0dp"
        android:layout_marginTop="10dp">
             <TextView
            android:text="工程师"
            android:layout_width="119.0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/textView1"
            android:layout_marginTop="0.0dp"
            android:layout_alignParentBottom="true" />
        <Spinner
            android:prompt="@string/planet_prompt"
             android:layout_width="220.0dp"
            android:layout_height="match_parent"
            android:id="@+id/butengineer"
            android:layout_alignParentRight="true"
             />
    </RelativeLayout>
    <RelativeLayout
             android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="57.0dp"
         android:layout_marginRight="7.0dp"
        android:layout_marginLeft="7.0dp"
        android:layout_marginBottom="1.0dp"
        android:layout_weight="4">
        <TextView
            android:text="客户名称"
            android:layout_width="119.0dp"
            android:layout_height="55.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center"
            android:id="@+id/textView2"
            android:layout_marginTop="23.0dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="220.0dp"
            android:layout_height="55.5dp"
            android:layout_marginRight="17.0dp"
            android:id="@+id/customerName"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15.0dp" />
        <Button
            android:text=""
            android:layout_width="40.0dp"
            android:layout_height="40.0dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/saomiaotubiao"
            android:layout_alignParentRight="true"
            android:id="@+id/butmember"
            android:layout_marginTop="7.0dp" />

    </RelativeLayout>
    <RelativeLayout
                 android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="57.0dp"

         android:layout_marginRight="7.0dp"
        android:layout_marginLeft="7.0dp"
        android:layout_marginBottom="1.0dp"
        android:layout_weight="4">
        <TextView
            android:text="客户手机号"
            android:layout_width="119.0dp"
            android:layout_height="55.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center"
            android:id="@+id/textView3"
            android:layout_marginTop="23.0dp" />
        <EditText
            android:inputType="phone"
            android:layout_width="220.0dp"
            android:layout_height="55.5dp"
            android:layout_marginRight="17.0dp"
            android:id="@+id/customerPhone"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22.0dp" />
    </RelativeLayout>
    <RelativeLayout
                         android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="57.0dp"
         android:layout_marginRight="7.0dp"
        android:layout_marginLeft="7.0dp"
        android:layout_marginBottom="1.0dp"
        android:layout_weight="4">
        <TextView
            android:text="收据金额"
            android:layout_width="119.0dp"
            android:layout_height="55.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center"
            android:id="@+id/textView4"
            android:layout_marginTop="23.0dp" />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="220.0dp"
            android:layout_height="55.5dp"
            android:layout_marginRight="17.0dp"
            android:id="@+id/receiptPrice"
            android:layout_alignParentRight="true"
            android:layout_marginTop="17.0dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#E5E5E5"
        android:layout_width="fill_parent"
        android:layout_height="243.5dp"
        android:layout_weight="4">
        <Button
            android:text="扫码支付"
            android:layout_width="135.0dp"
            android:layout_height="59.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:backgroundTint="#27B195"
            android:textColor="#E5E5E5"
            android:id="@+id/credateOrderScan"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />
        <Button
            android:text="刷卡支付"
            android:textColor="#E5E5E5"
            android:layout_width="135.0dp"
            android:layout_height="59.5dp"
            android:backgroundTint="#27B195"
            android:id="@+id/credateOrderUnion"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</LinearLayout>
