<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="111.0dp"
        android:layout_weight="4">
        <TextView
            android:text="工程师"
            android:layout_width="217.0dp"
            android:layout_height="55.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center"
            android:id="@+id/textView1"
            android:layout_marginTop="23.0dp" />
        <Spinner
            android:prompt="@string/planet_prompt"
            android:layout_width="218.5dp"
            android:layout_height="55.5dp"
            android:id="@+id/butengineer"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17.0dp"
            android:layout_marginTop="23.0dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="113.5dp"
        android:layout_weight="4">
        <TextView
            android:text="客户名"
            android:layout_width="217.0dp"
            android:layout_height="55.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center"
            android:id="@+id/textView2"
            android:layout_marginTop="23.0dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="203.0dp"
            android:layout_height="55.5dp"
            android:layout_marginRight="17.0dp"
            android:id="@+id/customerName"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15.0dp" />
        <Button
            android:text="会员"
            android:layout_width="72.0dp"
            android:layout_height="36.0dp"
            android:layout_alignParentRight="true"
            android:id="@+id/butmember"
            android:layout_marginTop="23.0dp" />

    </RelativeLayout>
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="143.5dp"
        android:layout_weight="4">
        <TextView
            android:text="联系人电话"
            android:layout_width="204.0dp"
            android:layout_height="55.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center"
            android:id="@+id/textView3"
            android:layout_marginTop="23.0dp" />
        <EditText
            android:inputType="phone"
            android:layout_width="205.0dp"
            android:layout_height="55.5dp"
            android:layout_marginRight="17.0dp"
            android:id="@+id/customerPhone"
            android:layout_alignParentRight="true"
            android:layout_marginTop="22.0dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="143.5dp"
        android:layout_weight="4">
        <TextView
            android:text="收据金额"
            android:layout_width="217.0dp"
            android:layout_height="55.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center"
            android:id="@+id/textView4"
            android:layout_marginTop="23.0dp" />
        <EditText
            android:inputType="numberDecimal"
            android:layout_width="202.0dp"
            android:layout_height="55.5dp"
            android:layout_marginRight="17.0dp"
            android:id="@+id/receiptPrice"
            android:layout_alignParentRight="true"
            android:layout_marginTop="17.0dp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#F5F5F5"
        android:layout_width="fill_parent"
        android:layout_height="243.5dp"
        android:layout_weight="4">
        <Button
            android:text="扫码支付"
            android:layout_width="135.0dp"
            android:layout_height="59.5dp"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/credateOrderScan"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />
        <Button
            android:text="刷卡支付"
            android:layout_width="135.0dp"
            android:layout_height="59.5dp"
            android:id="@+id/credateOrderUnion"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>
</LinearLayout>
